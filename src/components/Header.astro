---
const { pathname } = Astro.url;
const isEn = pathname.startsWith("/en");

const resumeUrl = isEn
    ? "https://docs.google.com/document/d/1va40naUIQ2HIlfadBKLjUKFGfLekvbnIuvD0No9AEMY/edit?usp=sharing"
    : "https://docs.google.com/document/d/15kjbKfTqB9fEi2-RCOPCXTJVEvXInHdo27BKs-EYocU/edit?usp=sharing";

const resumeLabel = isEn ? "Resume" : "Currículo";
---

<header class="fixed top-0 left-0 w-full z-50 bg-black">
    <div class="flex justify-between items-center px-4 py-2">
        <a href={isEn ? "/en" : "/pt"}>
            <p class="text-sm md:text-xl font-bold text-white font-mono">
                <span class="md:hidden">JeffSC</span>
                <span class="hidden md:inline">Jefferson Silva Caires</span>
            </p>
        </a>
        <nav>
            <ul>
                <li
                    class="text-white font-mono text-xs md:text-sm px-2 flex items-center"
                >
                    <div class="flex gap-1">
                        <a
                            href="/pt"
                            aria-label="Mudar para Português"
                            class={`transition-colors ${!isEn ? "text-emerald-400 font-bold" : "text-white hover:text-gray-300"}`}
                        >
                            PT
                        </a>
                        <span class="text-white">/</span>
                        <a
                            href="/en"
                            aria-label="Switch to English"
                            class={`transition-colors ${isEn ? "text-emerald-400 font-bold" : "text-white hover:text-gray-300"}`}
                        >
                            EN
                        </a>
                    </div>

                    <span class="text-white mx-3">|</span>

                    <a
                        href={resumeUrl}
                        target="_blank"
                        class="hover:text-gray-300 transition-colors"
                    >
                        {resumeLabel}
                    </a>

                    <!-- <span class="text-gray-500 mx-1">|</span>

                    <a href="/" class="hover:text-gray-300 transition-colors">
                        Blog
                    </a> -->
                </li>
            </ul>
        </nav>
    </div>
</header>
