---
import PageLayout from "../layouts/PageLayout.astro";
import HomeAnimation from "../components/HomeAnimation.astro";
import ScrambleText from "../components/ScrambleText.astro";
import ScrollArrow from "../components/ScrollArrow.astro";
import myselfImage from "../assets/images/myself.jpg";
import mikaelImage from "../assets/images/mikael.jpg";
import themisImage from "../assets/images/themis.jpg";
import tagGoldenParkImage from "../assets/images/tag-golden-park.png";
import extractorImage from "../assets/images/extractor.png";
import portfolioImage from "../assets/images/portfolio.png";
import LogoWall from "../components/LogoWall.astro";
import SectionTitle from "../components/ui/SectionTitle.astro";
import SectionSubtitle from "../components/ui/SectionSubtitle.astro";
import Text from "../components/ui/Text.astro";
import TechStack from "../components/TechStack.astro";
import CardProject from "../components/CardProject.astro";
import ExpComponent from "../components/ExpComponent.astro";

const title = "Home | Portfolio";
---

<PageLayout title={title}>
    <section class="landing relative h-screen w-full overflow-hidden">
        <HomeAnimation />
        <div class="flex justify-center items-center h-screen flex-col">
            <ScrambleText
                class="text-xl text-white font-bold font-mono md:text-3xl"
                >Jefferson Silva Caires</ScrambleText
            >
            <ScrambleText
                class="font-semibold text-white font-mono text-sm md:text-lg"
                >Desenvolvedor Full-Stack</ScrambleText
            >
            <div class="absolute bottom-45 md:bottom-50" data-aos="fade-up">
                <button
                    class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-1 px-1 rounded-full"
                    ><a
                        href="https://wa.me/5547991158071?text=Ol%C3%A1%20Jefferson!%20Tudo%20bem%3F"
                        class="text-white text-sm md:text-lg font-bold py-2 px-2 rounded-full inline-block text-center"
                    >
                        Entre em Contato
                    </a>
                </button>
            </div>
            <ScrollArrow />
        </div>
    </section>
    <section class="about">
        <div class="flex flex-col items-center" data-aos="fade-up">
            <SectionTitle>Sobre mim</SectionTitle>
            <div
                data-aos="fade-up"
                class="flex max-w-7xl justify-center items-center gap-4 p-4 pt-5 md:p-10 sm:ml-10 sm:mr-10 flex-wrap md:flex-nowrap"
            >
                <img
                    src={myselfImage.src}
                    alt="Jefferson Silva Caires"
                    class="object-cover rounded-full size-48"
                />
                <Text>
                    Sou um profissional Full-Stack com experiência em
                    tecnologias Front-end (Vue e Astro), Back-end (NodeJS e
                    Python), Bancos de Dados (PostgreSQL e MySQL) e Cloud AWS
                    com dois certificados (AWS AI Practitioner e AWS Cloud
                    Practitioner).
                    <Text />
                </Text>
            </div>
        </div>
    </section>
    <section class="experience">
        <div class="flex flex-col items-center" data-aos="fade-up">
            <SectionTitle>Experiência</SectionTitle>
            <div
                class="flex flex-col max-w-7xl justify-center items-center gap-4 p-4 pt-5 md:p-10 sm:ml-10 sm:mr-10 flex-wrap md:flex-nowrap"
                data-aos="fade-up"
            >
                <ExpComponent
                    ano="2025"
                    tempo="6 meses"
                    cargo="Estagiário em IA"
                    empresa="Compass UOL"
                    modalidade="Remoto"
                >
                    <ul class="list-disc pl-4 space-y-1">
                        <li>
                            Vivência em <strong
                                >metodologias ágeis (Scrum/Kanban)</strong
                            > utilizando Jira para gestão de entregas.
                        </li>
                        <li>
                            Criação de <strong
                                >Chatbot Jurídico com IA Generativa</strong
                            > usando LangChain, arquitetura RAG e AWS Bedrock.
                        </li>
                        <li>
                            Desenvolvimento de API Serverless em <strong
                                >Python (AWS Lambda)</strong
                            > para leitura automática de notas fiscais (OCR).
                        </li>
                        <li>
                            Padronização de ambientes de desenvolvimento e
                            produção utilizando <strong>Docker</strong>.
                        </li>
                    </ul>
                </ExpComponent>
                <ExpComponent
                    ano="2024"
                    tempo="6 meses"
                    cargo="Estagiário"
                    empresa="Informatech"
                    modalidade="Presencial"
                >
                    <ul class="list-disc pl-4 space-y-1">
                        <li>
                            <strong>Setup e implantação on-site</strong> de estações
                            de trabalho e equipamentos no cliente.
                        </li>
                        <li>
                            Manutenção preventiva e corretiva de <strong
                                >hardware</strong
                            > (diagnóstico, trocas e upgrades).
                        </li>
                        <li>
                            <strong>Suporte Técnico Nível 1</strong> focado na resolução
                            de problemas de software e rede.
                        </li>
                        <li>
                            Gestão e controle de <strong
                                >inventário de TI</strong
                            >, monitorando ativos e periféricos.
                        </li>
                    </ul>
                </ExpComponent>
            </div>
        </div>
    </section>
    <div class="pb-10" data-aos="fade-up">
        <LogoWall />
    </div>
    <section class="technologies">
        <div class="flex flex-col items-center" data-aos="fade-up">
            <SectionTitle>Tecnologias</SectionTitle>
            <div class="pt-8 flex flex-col items-center">
                <SectionSubtitle>Stack Principal</SectionSubtitle>
                <TechStack
                    techs={[
                        "vuejs",
                        { name: "Tailwind", icon: "tailwindcss" },
                        "python",
                        "django",
                        "postgresql",
                        { icon: "amazonwebservices", name: "AWS" },
                        "docker",
                    ]}
                />
                <SectionSubtitle>Experiência</SectionSubtitle>
                <TechStack
                    techs={[
                        "nodejs",
                        "mysql",
                        "nginx",
                        "jupyter",
                        "astro",
                        "linux",
                        "react",
                    ]}
                />
                <SectionSubtitle>Estudando</SectionSubtitle>
                <TechStack techs={["jenkins", "gitlab"]} />
            </div>
        </div>
    </section>
    <section class="projects">
        <div class="pt-8 flex flex-col items-center">
            <SectionTitle>Projetos</SectionTitle>
            <div
                class="grid grid-cols-1 lg:grid-cols-2 gap-6 mt-4 w-full max-w-7xl px-4"
                data-aos="fade-up"
            >
                <CardProject
                    title="GoldenPark - Tag Pet"
                    description="GoldenParkTag é um sistema para identificação de animais via QR Code. A aplicação vincula tags físicas a perfis digitais, permitindo a visualização pública de dados do pet e contato via WhatsApp, além de um painel administrativo para proprietários gerenciarem seus animais."
                    imageSrc={tagGoldenParkImage.src}
                    btn="Este projeto está em produção. Clique aqui para saber mais."
                    btnLink="https://www.loom.com/share/f0f5586ce30947aa9347d7d02ebe141c"
                    tags={[
                        "Vuejs",
                        "Tailwind",
                        "DaisyUI",
                        "PostgreSQL",
                        "Python",
                        "Django",
                        "Docker",
                        "Nginx",
                        "AWS EC2",
                        "AWS CloudFront",
                        "AWS Route53",
                        "AWS CloudFront",
                        "AWS S3",
                    ]}
                />
                <CardProject
                    title="Extractor - API de Processamento de Notas Fiscais com IA Generativa"
                    description="Uma API Serverless desenvolvida em Python para automatizar a extração e estruturação de dados de notas fiscais eletrônicas (NF-e) a partir de imagens."
                    imageSrc={extractorImage.src}
                    tags={[
                        "Python",
                        "AWS Lambda",
                        "AWS Textract",
                        "AWS Bedrock",
                        "AWS API Gateway",
                        "AWS S3",
                        "Docker",
                    ]}
                    btn="Ver no GitHub"
                    btnLink="https://github.com/JeffSSC/api_notasFiscais"
                />
                <CardProject
                    title="Themis - Chatbot Jurídico"
                    description="Um chatbot jurídico feito com RAG, langchain, Telegram API, AWS Transcribe e AWS Bedrock."
                    imageSrc={themisImage.src}
                    tags={[
                        "Python",
                        "RAG",
                        "langchain",
                        "Telegram API",
                        "AWS EC2",
                        "AWS Transcribe",
                        "AWS Bedrock",
                    ]}
                    btn="Ver no GitHub"
                    btnLink="https://github.com/JeffSSC/api_notasFiscais"
                />
                <CardProject
                    title="Mikael - LeRobot"
                    description="Uma mão robótica que joga UNO, desenvolvida com Python, Yolo e OpenCV."
                    imageSrc={mikaelImage.src}
                    btn="Ver no GitHub"
                    btnLink="https://github.com/LuanPonick/Mikael"
                    tags={["YOLO", "OpenCV", "Python", "LeRobot"]}
                />
                <CardProject
                    title="Portfólio/Blog"
                    description="Meu portfólio pessoal, onde compartilho projetos e experiências."
                    imageSrc={portfolioImage.src}
                    tags={[
                        "Astro",
                        "Tailwind",
                        "TypeScript",
                        "AWS Route53",
                        "AWS CloudFront",
                    ]}
                    btn="Ver no GitHub"
                    btnLink="https://github.com/JeffSSC/astro_portfolio"
                />
            </div>
            <div>
                <SectionSubtitle>Mais projetos em meu GitHub</SectionSubtitle>
                <a href="https://github.com/JeffSSC" target="_blank">
                    <TechStack techs={["github"]} />
                </a>
            </div>
        </div>
    </section>
    <section class="contact">
        <div class="flex flex-col items-center p-4 md:p-10">
            <SectionTitle>Entre em contato</SectionTitle>
            <div
                class="flex flex-wrap justify-center gap-6 md:gap-10 p-6 md:p-10 w-full"
            >
                <a
                    class="text-white flex flex-col items-center transition-transform hover:-translate-y-1"
                    href="https://wa.me/5547991158071?text=Ol%C3%A1%20Jefferson!%20Tudo%20bem%3F"
                    target="_blank"
                >
                    <i class="fab fa-whatsapp text-5xl md:text-9xl"></i>
                    <span class="font-bold mt-2">WhatsApp</span>
                </a>

                <a
                    class="text-white flex flex-col items-center transition-transform hover:-translate-y-1"
                    href="https://www.linkedin.com/in/jefferson-caires/"
                    target="_blank"
                >
                    <i class="fab fa-linkedin text-5xl md:text-9xl"></i>
                    <span class="font-bold mt-2">LinkedIn</span>
                </a>

                <a
                    class="text-white flex flex-col items-center transition-transform hover:-translate-y-1"
                    href="mailto:jefferson.caires@gmail.com"
                    target="_blank"
                >
                    <i class="fas fa-envelope text-5xl md:text-9xl"></i>
                    <span class="font-bold mt-2">Email</span>
                </a>
            </div>
        </div>
    </section>
</PageLayout>
